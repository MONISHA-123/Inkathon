	<App id="essentiaries">
		<ScrollContainer
					
						horizontal="false"
						vertical="true"
						height="100%">
				<Toolbar>
						<Title id="SelectedProdTitle"/>
						<ToolbarSpacer/>
					</Toolbar>
					
					<VBox class="sapUiSmallMargin">
