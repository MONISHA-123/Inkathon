<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover
		title="Cart"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		contentHeight="30%"
		>
	<Table id="idProductsTable"
		items="{oProductModel>/Cart}" width="27rem">
		<columns>
			<Column  >
			
			</Column>
			<Column >
			
			</Column>
			<Column  hAlign="End" >
			
			</Column>
			<Column  hAlign="End" >
	
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text
						text="{oProductModel>productname}"/>
					<StepInput
						value="{value}"
						min="1"
						max="10"
						width="80px"
						textAlign="Center"
						validationMode="LiveChange"
						change="onChange"/>
						
							<Text
						text="Rs {oProductModel>price}"/>
						<Button id="next" icon="sap-icon://sys-cancel-2" type="Transparent" press="fnOnDelete" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Text text="Total : Rs {oProductModel>/Total}" />
				<Button
					
					text="Proceed to cart"
					press="fnToOrderPage" />
			</OverflowToolbar>
		</footer>
	</Popover>
</core:FragmentDefinition>